page {
  height: 100%;
}

/* 2.主盒子 */
.contain {

  padding: 0rpx;
  width: 100%;
  /* 宽度占屏幕的100% */
  height: 89vh;
  overflow-x: auto;
  overflow-y: scroll;
  /* 高度占屏幕的100% */
  background-color: #fff;
  /* 背景颜色 */

}

.image_box {
  width: 150rpx;
  height: 150rpx;
  background-color: rgb(255, 255, 255);
}

.hisBox {
  width: 100%;
  height: 210rpx;
  padding: 0rpx 20rpx;
  margin: 20rpx 0rpx;
}

.detail {
  width: 100%;
  height: 100%;
  padding: 30rpx 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
}

.detail_item {
  width: 300rpx;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
}

.detail_item text {
  width: 100%;
}

.status {
  width: 150rpx;
}

.status_item {
  width: 100%;
  color: rgb(252, 73, 73);
}