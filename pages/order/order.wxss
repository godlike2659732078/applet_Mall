.order_container {
  padding: 0rpx 24rpx;
}

.box {
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.noOrder {
  display: block;
  width: 240rpx;
  height: 234rpx;
  margin-top: 132rpx;
}

.text {
  display: block;
  width: 100%;
  height: auto;
  text-align: center;
  color: #333333;
  margin-top: 42rpx;
  font-size: 26rpx;
}

.orderBox {
  width: 700rpx;
  height: 432rpx;
background: #fff;
  border-radius: 20rpx;
  margin: 14rpx 0rpx;
  padding: 22rpx;
}

.orderHead {
  height: 50rpx;
  position: relative;
  margin-bottom: 14rpx;
}

.orderHead .wait {
  display: inline-block;
  line-height: 20rpx;
  position: absolute;
  top: 10rpx;
  right: 0;
  font-size: 26rpx;
  color: #FF2B41;
}

.orderHead .dpName {
  display: inline-block;
  line-height: 20rpx;
  position: absolute;
  top: 10rpx;
  color: #0C0C0C;
  font-size: 28rpx;
  margin-left: 15rpx;
}

.orderall {
  position: relative;
}

.orderImage {
  width: 180rpx;
  height: 180rpx;
}



.name {
  
display: -webkit-box;
overflow: hidden;
text-overflow: ellipsis;
word-wrap: break-word;
white-space: normal !important;
-webkit-line-clamp: 3;
-webkit-box-orient: vertical;
  width: 306rpx;
  font-size: 24rpx;
  color: #333333;
  position: absolute;
  left: 200rpx;
  top: -30rpx;
  line-height: 30rpx;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
  }
.price {
  display: block;

  text-align: center;
  font-size: 24rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
}

.Specifications {
  display: -webkit-box;
overflow: hidden;
text-overflow: ellipsis;
word-wrap: break-word;
white-space: normal !important;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
width:400rpx;
  font-size: 24rpx;
  color: #999999;
  position: absolute;
  left: 200rpx;
  top: 40rpx;
}

.number {
  font-size: 20rpx;
  color: #888888;
  position: absolute;
  top: 40rpx;
  right: 0rpx;
}

.btn {
  display: block;
  width: 102rpx;
  height: 28rpx;
  border: 1px solid #FF5D2B;
  font-size: 16rpx;
  color: #FF5D2B;
  text-align: center;
  border-radius: 40rpx;
  line-height: 30rpx;
  position: absolute;
  left: 200rpx;
  top: 140rpx;
}

.intDetail {
  font-size: 18rpx;
  color: #3A3A3A;
  position: absolute;
  left: 322rpx;
  top: 142rpx;
}

.orderMoney {
  position: absolute;
