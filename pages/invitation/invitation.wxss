/* pages/share/share.wxss */
@import '/app.wxss';

page {
  height: 100%;
  background: linear-gradient(to bottom,#F5384E, #AB40CF);
}

.contain {
  width: 100%;
  height: 100%;
}
.head_bg{
  width: 100%;
  height: 200rpx;
 position: relative;
}
.share_box text{
  display: block;
  width: 100%;
  text-align: center;
}
.share_box{
  width: 80%;
  height: 800rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin: -100rpx 10% 0rpx;
  text-align: center;
  padding-top: 60rpx;
}
.image_box{
  display: flex;
  justify-content: center;
  align-items: center;
}
.shareImage{
  display: block;
  width: 300rpx;
  height: 300rpx;

}
.head_title{
  display: block;
}
.share_code{
  color: #B55739;
  letter-spacing:20rpx;
  height: 50rpx;
  margin-top: 80rpx;
}
.content{
  font-size: 22rpx;
  display: block;
  color: #aaa;
  height: 40rpx;

}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.btn_record{
  display: block;
  font-size: 26rpx;
position: absolute;
top: 13%;
right: 30rpx;
}