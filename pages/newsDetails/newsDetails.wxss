@import '/app.wxss';
@import '/wxParse/wxParse.wxss';

#reset {
  display: block;

}

#app {
  height: 100%;
}

page {
  height: 100%;

}

/* 2.主盒子 */
.contain {

  padding: 0rpx 20rpx;
  width: 100%;
  /* 宽度占屏幕的100% */
  height: 89%;
  /* 高度占屏幕的100% */
  background-color: rgb(236, 236, 236);
  /* 背景颜色 */
  overflow-x: auto;
  overflow-y: scroll;
}

.detail_head {
  width: 100%;
  height: auto;
  margin: 14rpx 0rpx;
  border-radius: 10rpx;
  background-color: #fff;
}

.detai_box {
  width: 100%;
  background-color: #fff;
  padding: 20rpx 30rpx 20rpx;
  box-sizing: border-box;
}

.wxParse-inline {
  font-size: 24rpx;
}

.head_box {
  width: 100%;
  height: 100%;
  padding: 20rpx 30rpx;
 
}

.head_box .title{
  display: block;
  width: 100%;
  font-size: 24rpx;
  margin-bottom: 20rpx;
  font-weight: 600;
}


.wxParse-img{
  display: block;
}
.wxParse-p{
  width: 100%;
  margin: 20rpx 0rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.text{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.text{
 
  padding: 0rpx 10rpx 10rpx;
  border-bottom: 1rpx solid rgb(223, 223, 223);
}
 .text text{
  display: block;
  width: auto;
  font-size: 24rpx;
  line-height: 44rpx;
}
.box{
  display: flex;
  align-items: center;
}
.box text{
  margin-left: 10rpx;
}
.introduce{
  width: 100%;
  margin-top: 10rpx;
}
.introduce .in_text{
  font-size: 24rpx;
}