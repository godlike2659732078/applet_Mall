/* pages/apply/apply.wxss */
@import '/app.wxss';

#reset {
  display: block;
  width: 100%;
  position: fixed;
  top: 0rpx;
}

page {
  width: 100%;
  height: 100%;
  position: relative;
}

.contain {
  width: 100%;
  position: fixed;
  top: 10%;

}

.orderall {
  width: 100%;
  height: 220rpx;
  padding: 18rpx 28rpx;
  position: relative;
}

.image {
  width: 184rpx;
  height: 184rpx;
}
.chooseImage{
  width: 150rpx;
  height: 150rpx;
  margin-right: 30rpx;
}
.chooseBox{
  width: 100%;
  padding: 30rpx 0rpx;
}
.orderImage {
  width: 180rpx;
  height: 180rpx;
}

.apply_name {
  display: block;
  width: 306rpx;
  font-size: 24rpx;
  color: #333333;
  position: absolute;
  left: 232rpx;
  top: 18rpx;
  line-height: 30rpx;
}

.price {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #FF2B41;
  position: absolute;
  left: 232rpx;
  top: 174rpx;
}

.Specifications {
  font-size: 24rpx;
  color: #999999;
  position: absolute;
  left: 232rpx;
  top: 112rpx;
  line-height: 10rpx;
}

.number {
  font-size: 28rpx;
  color: #333333;
  position: absolute;
  top: 172rpx;
  right: 32rpx;
}

.btn {
  display: block;
  width: 102rpx;
  height: 28rpx;
  border: 1px solid #FF5D2B;
  font-size: 16rpx;
  color: #FF5D2B;
  text-align: center;
  border-radius: 40rpx;
  line-height: 30rpx;
  position: absolute;
  left: 200rpx;
  top: 140rpx;
}

.intDetail {
  font-size: 18rpx;
  color: #3A3A3A;
  position: absolute;
  left: 322rpx;
  top: 142rpx;
}

.orderMoney {
  position: absolute;
  right: 6%;
  bottom: 108rpx;

}

.choose_attr_view {
  height: 88rpx;
  padding: 20rpx 30rpx;
  margin-top: 20rpx;
}

.choose_attr_left text {
  font-size: 28rpx;
  color: #333333;
}

.right {
  display: block;
  float: right;
  margin-top: 5rpx;
  color: #999999;
}

.choose {
  color: #999999;
  display: inline-block;
  margin-top: 10rpx;
  line-height: 40rpx;
}

.sheet {
  font-size: 20rpx;
}

.applymoneys {
  height: 88rpx;
  padding: 20rpx 30rpx;
  margin-top: 20rpx;
}

.applyMoney {
  margin-left: 20rpx;
  color: #FF2B41;
  font-size: 28rpx;
}

.apply_show {
  height: 88rpx;
  padding: 20rpx 30rpx;
  margin-top: 20rpx;
  position: relative;
}

.apply_show text {
  line-height: 10rpx;
}

.ipt_apply {
  display: inline-block;
  width: 400rpx;
  position: absolute;
  margin-left: 20rpx;
}

.apply_upload {
  padding: 20rpx 30rpx;
  margin-top: 20rpx;
  width: 100%;
  height: 330rpx;
  position: relative;
}

.upload {
  position: absolute;
  left: 30rpx;
  top: 88rpx;
}
.submit{
width: 100%;
  position: fixed;
  bottom: 0rpx;
  font-size: 36rpx;
}