@import '/app.wxss';

#reset {
  display: block;
  width: 100%;
  position: fixed;
  top: 0rpx;
}

page {
  height: 100%;

}

.contain {
  width: 100%;
  height: 100%;
  padding: 0rpx 38rpx 0rpx;
  margin-top: 3vh;
  position: fixed;
  top: 10%;
}

.headPortrait {
  height: 112rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;

}

.head_image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.img_box {
  display: flex;
  align-items: center;
}

.items {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.item_box {
  width: 100%;
  height: 88rpx;
  padding-right: 6rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title {
  color: #333333;
  font-size: 28rpx;
}

.name {
  color: #999999;
  font-size: 28rpx;
}

.footBox {
  margin-top: 20rpx;
}

.signOut {
  width: 100%;
  height: 76rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 100rpx;
}

.in {
  height: 60rpx;
  display: block;
  width: 260rpx;
  background-color: #fff;
  border: 1rpx solid #ff2e40;
  border-radius: 10rpx;
  color: #ff2e40;
  text-align: center;
  line-height: 60rpx;
}

.out {
  height: 60rpx;
  display: block;
  width: 260rpx;
  background: linear-gradient(to right, #ff592d, #ff2e40);
  border-radius: 10rpx;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
}
.nameipt {
  text-align: left;
  margin-top: 4vh;
  border-bottom: 1px solid #aaa;
}
.head_allnums {
  width: 100%;
  height: 300rpx;
  background: linear-gradient(to right, #ff592d, #ff2e40);
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.box {
  width: 240rpx;
  height: 240rpx;
  border: 4rpx solid #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  padding: 50rpx 0rpx;
}

.box text {
  display: block;
  width: 240rpx;
  height: 50rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
}