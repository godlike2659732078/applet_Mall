/* pages/orderDetails/orderDetails.wxss */
/* pages/subOrder/subOrder.wxss */
@import '/app.wxss';

#reset {
  display: block;
  width: 100%;
  position: fixed;
  top: 0rpx;
}

page {
  height: 100%;
}

.contain {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 10%;
 
}

.head_box {
  width: 100%;
  height: 476rpx;
  padding: 46rpx 30rpx;
}

.head_text {
  width: 100%;
  display: flex;
  align-items: center;
}

.title {
  margin-left: 20rpx;
}

.text {
  width: 100%;
  padding-top: 48rpx;
}

.text text {
  line-height: 28rpx;
  font-size: 28rpx;
  color: #666666;
}

.btns {
  width: 100%;
  padding: 50rpx 24rpx;
  display: flex;justify-content: space-between;
}

.btns .modify {
  display: block;
  width: 300rpx;
  height: 74rpx;
  font-size: 28rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 74rpx;
  border-radius: 6rpx;
  background: linear-gradient(to right, #FF5D2B, #FF2B41);
}

.btns .contact {
  display: block;
  width: 300rpx;
  height: 74rpx;
  font-size: 28rpx;
  color: #E01212;
  text-align: center;
  line-height: 74rpx;
  border-radius: 6rpx;
border:1px solid #E01212;
}
.main_title{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  padding:0rpx 30rpx;
}
.main_shop{
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  padding:0rpx 30rpx;
}
.main_shop text{
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #333333;
}

.main_good {
  width: 100%;
  height: 220rpx;
  
  position: relative;
  padding:18rpx 30rpx;
}

.image {
  width: 184rpx;
  height: 184rpx;
}

.orderImage {
  width: 180rpx;
  height: 180rpx;
}

.apply_name {
  display: block;
  width: 306rpx;
  font-size: 24rpx;
  color: #333333;
  position: absolute;
  left: 232rpx;
  top: 18rpx;
  line-height: 30rpx;
}

.price {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #FF2B41;
  position: absolute;
  left: 232rpx;
  top: 174rpx;
}

.Specifications {
  font-size: 24rpx;
  color: #999999;
  position: absolute;
  left: 232rpx;
  top: 112rpx;
  line-height: 10rpx;
}

.number {
  font-size: 28rpx;
  color: #333333;
  position: absolute;
  top: 172rpx;
  right: 34rpx;
}
.main_news{
  width: 100%;
  height: 86rpx;
  line-height: 90rpx;
  border-bottom:2rpx solid #DDDDDD ;
  padding:0rpx 30rpx;
}