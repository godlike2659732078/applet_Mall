/* pages/share/share.wxss */
@import '/app.wxss';

#reset {
  display: block;
  width: 100%;
  position: fixed;
  top: 0rpx;
  z-index: 10;
}

page {
  height: 100%;
}

.account_container {
  width: 100%;
  height: 100%;
  padding: 30rpx 26rpx;
  position: fixed;
  top: 10%;
}

.head_box {
  width: 100%;
  height: 300rpx;
  padding: 0rpx 28rpx;
  background: linear-gradient(to right, #FF5D2B, #FF2B41);
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.balance_box {
  width: 100%;
  height: 224rpx;
  text-align: center;
  padding-top: 76rpx ;
  padding-bottom: 56rpx;
  border-bottom: 1px solid #f3f3f3;
}

.balance_box text:first-child {
  display: block;
  width: 100%;
  color: #fff;
  font-size: 60rpx;
  text-align: center;
}

.balance_box text:last-child {
  display: block;
  width: 100%;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
}
.box_foot{
  width: 100%;
  height: 72rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;

  color: #FFFFFF;
  font-size: 20rpx;
}

.btnBox {
  width: 100%;
  height: 140rpx;
  padding: 34rpx 40rpx;
  display: flex;justify-content: space-between;
}

.btnBox .modify {
  display: block;
  width: 286rpx;
  height: 66rpx;
  font-size: 28rpx;
  color: #E01212;
  text-align: center;
  line-height: 66rpx;
  border-radius: 20rpx;
border:2rpx solid #E01212;

}

.btnBox .contact {
display: block;
width: 286rpx;
height: 70rpx;
font-size: 28rpx;
color: #FFFFFF;
text-align: center;
line-height: 70rpx;
border-radius:20rpx;
background: linear-gradient(to right, #FF5D2B, #FF2B41);
}
.indexes_box{
  width: 100%;
  height: auto;
  margin-top: 20rpx;
}
.examine{
    width: 100%;
    height: 120rpx;
    padding: 0rpx 12rpx 0rpx 18rpx ;
    margin-bottom: 10rpx;
    display: flex;
align-items: center;
justify-content: space-between;
}
.examine image{
  width: 70rpx;
  height: 70rpx;
}
.icon_text{
  display: flex;
  align-items: center;
}
.icon_text text{
  margin-left: 32rpx;
  font-size: 32rpx;
  color: #373C40;
}
.rule{
  width: 100%;
  height: 120rpx;

  padding: 0rpx 12rpx 0rpx 18rpx ;
  display: flex;
align-items: center;
justify-content: space-between;
}
.rule image{
width: 70rpx;
height: 70rpx;
}
.fixBox{
  width: 100rpx;
  height: 100rpx;
 border-radius: 50%;
 background: linear-gradient(to right, #FF5D2B, #FF2B41);
 display: flex;
 align-items: center;
 justify-content: center;
 position: fixed;
 right: 26rpx;
}
.fixBox text{
  color: #FFFFFF;
  font-size: 24rpx;
}