@import '/app.wxss';

#reset {
  display: block;
  width: 100%;
  position: fixed;
  top: 0rpx;
}

page {
  height: 100%;
}

.contain {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 10%;
}

.addressBox {
  width: 100%;
  background-color: #fff;
  height: 262rpx;
  padding: 46rpx 26px 28rpx;
  box-sizing: border-box;
}

.box_head {
  display: flex;
  justify-content: space-between;
}

.box_head text:first-child {
  color: #3A3A3A;
  font-size: 30rpx;
}

.box_head text:last-child {
  color: #808080;
  font-size: 30rpx;
}

.address {
  border-bottom: 1px solid #ebebeb;
  padding: 10rpx 0rpx;
  margin:10rpx 0rpx;
}

.address text {
  font-size: 28rpx;
  color: #6B6B6B;
  margin-top: 20rpx;
}

.set {
  text-align: right;
  width: auto;
  height: 50rpx;
  line-height: 52rpx;
  display: flex;
  float: right;
}

.default {
  width: 50%;
}

.iconset {
  display: inline-block;
  margin-top: 10rpx;
}
.edit{
  width: auto;
  display: flex;
  align-items: center;
  margin-right: 60rpx;
}
.del{
  width:auto;
  display: flex;
  align-items: center;
}
.edit text {
  font-size: 24rpx;
  color: #6B6B6B;
}

.del text {
  font-size: 24rpx;
  color: #6B6B6B;
}

.box_foot {
  padding: 10rpx 0rpx;
  display: flex;
  justify-content: space-between;
}
.addBtn{
  width:100% ;
  padding: 30rpx 26rpx;
}
.btn_add{
  width: 698rpx;
  height: 76rpx;
  text-align: center;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn_add text{
  font-size: 30rpx;
  color: #BFBFBF;
}