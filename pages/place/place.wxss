/* pages/share/share.wxss */
@import '/app.wxss';

page {
  height: 100%;
}

.contain {
  width: 100%;
  height: 100%;
}

.headBox {
  width: 100%;
  height: 300rpx;
  background: linear-gradient(to right, #ff592d, #ff2e40);
  padding-top:80rpx ;
}

.place {
  display: block;
  width: 100%;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  
}

.head_bg {
  width: 100%;
  height: 200rpx;
  position: relative;
}

.share_box text {
  display: block;
  width: 100%;
  text-align: center;
}

.share_box {
  width: 80%;
  height: 800rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin: -100rpx 10% 0rpx;
  text-align: center;
  padding-top: 60rpx;
}

.image_box {
  display: flex;
  justify-content: center;
  align-items: center;
}

.shareImage {
  display: block;
  width: 300rpx;
  height: 300rpx;

}

.head_title {
  display: block;
}

.share_code {
  color: #B55739;
  letter-spacing: 20rpx;
  height: 50rpx;
  margin-top: 80rpx;
}

.content {
  font-size: 22rpx;
  display: block;
  color: #aaa;
  height: 40rpx;

}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.btn_record {
  display: block;
  font-size: 26rpx;
  position: absolute;
  top: 13%;
  right: 30rpx;
}
.headPortrait {
  height: 82rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
padding: 0rpx 30rpx;
}

.head_image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.img_box {
  display: flex;
  align-items: center;
}

.items {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.item_box {
  width: 100%;
  height: 88rpx;
  padding-right: 6rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title {
  color: #333333;
  font-size: 28rpx;
}

.name {
  color: #999999;
  font-size: 28rpx;
}
.talk{
  display: block;
  width: 100%;
  text-align: center;
  font-size: 26rpx;
}