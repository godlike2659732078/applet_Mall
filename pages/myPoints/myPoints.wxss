page {
  height: 100%;
}

/* 2.主盒子 */
.contain {

  padding: 0rpx;
  width: 100%;
  /* 宽度占屏幕的100% */
  height: 89vh;
  overflow-x: auto;
  overflow-y: scroll;
  /* 高度占屏幕的100% */
  background-color: #fff;
  /* 背景颜色 */

}

.indexes_box {
  width: 100%;
  height: auto;
  margin-top: 20rpx;
}

.examine {
  width: 100%;
  height: 120rpx;
  padding: 0rpx 12rpx 0rpx 18rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.examine image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.icon_text {
  display: flex;
  align-items: center;
}

.textBox .coinName {
 
  font-size: 30rpx;
  color: #373C40;
}

.textBox .yue {

  font-size: 28rpx;
  color: #FF2B41;

}
.textBox{
  margin-left: 30rpx;

}
.button{
  width: 100%;
  position: fixed;
  bottom: 100rpx;
  display: flex;
  justify-content: center;
}
.fixBox{
  width: 100rpx;
  height: 100rpx;
 border-radius: 50%;
 background: linear-gradient(to right, #FF5D2B, #FF2B41);
 display: flex;
 align-items: center;
 justify-content: center;
 position: fixed;
 right: 26rpx;
 top: 50%;
}
.fixBox text{
  color: #FFFFFF;
  font-size: 24rpx;
}