<view>
	<van-nav-bar id="reset" title="卡包" bind:click-left="onClickLeft" custom-style="height:{{navH}}rpx; background:linear-gradient(to right, #ff592d,#ff2e40);  ">
		<view style="height:100rpx;display:flex;align-items:center" slot="left">
			<van-icon name="arrow-left" custom-class="icon " size="40rpx" />
		</view>
	</van-nav-bar>
	<van-tabs swipeable active="{{ active }}" class="tabs" bind:change="getList">
		<block wx:for="{{categoryLists}}" wx:key="index">
			<van-tab title="{{item.title}}" data-id="{{item.id}}">
				<view class="contain" wx:if="{{active==0}}">
					<view class="swiper-tab">
						<view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">未使用</view>
						<view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">已过期</view>
						<view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">已使用</view>
					</view>
					<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:80vh" bind:change="bindChange">
						<swiper-item>

							<view class="offline_dis">
								<scroll-view scroll-y="true" bindscrolltolower="loadMore" style="height:77vh;width:100%;">
									<block wx:for="{{offline_dis}}" wx:key="index">
										<view class="boxs" data-id="{{item.offlineTableId}}"  data-offlineid="{{item.offlineId}}" bindtap="gotoShopDetails">
											<view class="left_box">
												<text>￥{{item.lowerAmount}}</text>
												<text>满{{item.fullAmount}}使用</text>
											</view>
											<view class="offline_dis_name">
												<view class="offline_namebox">
													<text class="offline_name">{{item.name}}</text>
												</view>
												<view class="date">
													<text class="dateTime">{{item.createTime}}到{{item.expirationTime}}</text>
												</view>
											</view>
										</view>
									</block>
								</scroll-view>
							</view>

						</swiper-item>
						<swiper-item>

							<view class="offline_dis">
								<scroll-view scroll-y="true" bindscrolltolower="loadMore" style="height:77vh;width:100%;">
									<block wx:for="{{offline_dis}}" wx:key="index">
										<view class="boxs" data-id="{{item.offlineTableId}}"  data-offlineid="{{item.offlineId}}" bindtap="gotoShopDetails">
											<view class="left_box_disabled">
												<text>￥{{item.lowerAmount}}</text>
												<text>满{{item.fullAmount}}使用</text>
											</view>
											<view class="offline_dis_name">
												<view class="offline_namebox">
													<text class="offline_name_disavled">{{item.name}}</text>
												</view>
												<view class="date">
													<text class="dateTime_disabled">{{item.createTime}}到{{item.expirationTime}}</text>
												</view>
											</view>
										</view>
									</block>
								</scroll-view>
							</view>

						</swiper-item>
						<swiper-item>

							<view class="offline_dis">
								<scroll-view scroll-y="true" bindscrolltolower="loadMore" style="height:77vh;width:100%;">
									<block wx:for="{{offline_dis}}" wx:key="index">
										<view class="boxs" data-id="{{item.offlineTableId}}"  data-offlineid="{{item.offlineId}}" bindtap="gotoShopDetails">
											<view class="left_box_disabled">
												<text>￥{{item.lowerAmount}}</text>
												<text>满{{item.fullAmount}}使用</text>
											</view>
											<view class="offline_dis_name">
												<view class="offline_namebox">
													<text class="offline_name_disavled">{{item.name}}</text>
												</view>
												<view class="date">
													<text class="dateTime_disabled">{{item.createTime}}到{{item.expirationTime}}</text>
												</view>
											</view>
										</view>
									</block>
								</scroll-view>
							</view>


						</swiper-item>
					</swiper>
				</view>
				<view class="contain" wx:if="{{active==1}}">
					<view class="swiper-tab">
						<view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">未使用</view>
						<view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">已过期</view>
						<view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">已使用</view>
					</view>
					<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:80vh" bind:change="bindChanges">
						<swiper-item>
							<view class="shop_dis">
								<scroll-view scroll-y="true" bindscrolltolower="loadMore" style="height:77vh;width:100%;">
									<block wx:for="{{shop_dis}}" wx:key="index">
										<view class="shop_boxs" data-id="{{item.goodsId}}" bindtap="gotoGoodsDetails">
											<view class="shop_left_box">
												<text class="cny">￥</text>
												<text class="num">{{item.lowerAmount}}</text>
												<text class="shop_quan">消费券</text>
												<view class="money_time">
													<text>满{{item.fullAmount}}元可用</text>
													<text>有效期至：{{item.expirationTime}}</text>
												</view>
											</view>
											<view class="shop_right_box">
												<text>未使用</text>
											</view>
										</view>
									</block>
								</scroll-view>
							</view>

						</swiper-item>
						<swiper-item>
							<view class="shop_dis">
								<scroll-view scroll-y="true" bindscrolltolower="loadMore" style="height:77vh;width:100%;">
									<block wx:for="{{shop_dis}}" wx:key="index">
										<view class="shop_boxs" data-id="{{item.goodsId}}" bindtap="gotoGoodsDetails">
											<view class="shop_left_box_disabled">
												<text class="cny">￥</text>
												<text class="num">{{item.lowerAmount}}</text>
												<text class="shop_quan_disabled">消费券</text>
												<view class="money_time_disabled">
													<text>满{{item.fullAmount}}元可用</text>
													<text>有效期至：{{item.expirationTime}}</text>
												</view>
											</view>
											<view class="shop_right_box_disabled">
												<text>已过期</text>
											</view>
										</view>
									</block>
								</scroll-view>
							</view>
						</swiper-item>
						<swiper-item>
							<view class="shop_dis">
								<scroll-view scroll-y="true" bindscrolltolower="loadMore" style="height:77vh;width:100%;">
									<block wx:for="{{shop_dis}}" wx:key="index">
										<view class="shop_boxs" data-id="{{item.goodsId}}" bindtap="gotoGoodsDetails">
											<view class="shop_left_box_disabled">
												<text class="cny">￥</text>
												<text class="num">{{item.lowerAmount}}</text>
												<text class="shop_quan_disabled">消费券</text>
												<view class="money_time_disabled">
													<text>满{{item.fullAmount}}元可用</text>
													<text>有效期至：{{item.expirationTime}}</text>
												</view>
											</view>
											<view class="shop_right_box_disabled">
												<text>已使用</text>
											</view>
										</view>
									</block>
								</scroll-view>
							</view>

						</swiper-item>
					</swiper>
				</view>
			</van-tab>
		</block>
	</van-tabs>

</view>