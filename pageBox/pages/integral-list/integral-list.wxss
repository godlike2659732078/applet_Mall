@import '/app.wxss';

#reset {
  display: block;
}

.tabs {
  position: fixed;
  top: 11%;
  width: 100%;
}
page {
  height: 100%;
  background-color: #fff;
}
/* 2.主盒子 */
.contain {
  margin-top: 10rpx;
  padding: 0rpx;
  width: 100%;
  /* 宽度占屏幕的100% */
  height: 89%;
  /* 高度占屏幕的100% */
  background-color: #fff;
  /* 背景颜色 */

}
.goodList {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  flex-direction:row;
  padding: 0rpx 24rpx;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
}

.boxs {
  width: 340rpx;
  height: 400rpx;
  margin-bottom: 2rpx;
  background-color: #f5f5f5;
  border-radius:20rpx;
 
}

.box_image {
  width: 100%;
  height: 260rpx;

}
.image_item{
  width: 90%;
  height: 260rpx;
  margin: 20rpx 18rpx 20rpx;
  border-top-left-radius:20rpx;
  border-top-right-radius:20rpx;
}
.box_items {
  width: 100%;
  height: auto;
  padding: 0rpx 26rpx;
}

.box_items .item_title {

  width: 100%;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  color: #626262;
  line-height: 30rpx;
  font-size: 24rpx;

}

.box_items .item_price {
  display: block;
  width: 98rpx;
  color: #FF0000;
  line-height: 30rpx;
  font-size: 26rpx;
  font-weight: 600;
  margin-top: 10rpx;
}