.liveBroadcast{
  width: 100%;
  margin-top: 10rpx;
  border-radius: 20rpx;
  background: #ffffff;
}
.lists{width:100%;white-space:nowrap;margin-top:25rpx;padding: 0 20rpx;}
.lists .items{width:100%;display:inline-block;margin-right:20rpx;}
.lists .items .pictrues{width:100%;height:300rpx;border-radius:10rpx;position:relative;}
.lists .items image{width:100%;height:100%;border-radius:10rpx;display:block;}
 .lists .items .labels{background:linear-gradient(270deg,rgba(255,85,85,1) 0%,rgba(255,0,0,1) 100%);border-radius:10rpx 0 10rpx 0;height:36rpx;line-height:36rpx;position:absolute;top:0;left:0;color:#fff;font-size:22rpx;padding:0 15rpx;}
 .lists .items .labels .iconfonts{font-size:25rpx;margin-right:7rpx;}
/* .liveBroadcast .title{font-size:30rpx;color:#282828;font-weight:600;padding:0 30rpx;} */
.liveBroadcast .list{width:100%;margin-top:25rpx;padding: 0 20rpx;}
.liveBroadcast .list .item{width:100%;display:inline-block;margin-right:20rpx;}
.liveBroadcast .list .item .pictrue{width:100%;height:300rpx;border-radius:10rpx;position:relative;}
/* .liveBroadcast .list .item:nth-of-type(1){margin-left:30rpx;} */
.liveBroadcast .list .item image{width:100%;height:100%;border-radius:10rpx;display:block;}
.liveBroadcast .list .item .label{background:linear-gradient(270deg,rgba(255,85,85,1) 0%,rgba(255,0,0,1) 100%);border-radius:10rpx 0 10rpx 0;height:36rpx;line-height:36rpx;position:absolute;top:0;left:0;color:#fff;font-size:22rpx;padding:0 15rpx;}
.liveBroadcast .list .item .label .iconfont{font-size:25rpx;margin-right:7rpx;}
.liveBroadcast .list .item.end .label{background:linear-gradient(270deg,rgba(153,153,153,1) 0%,rgba(102,102,102,1) 100%);}
.liveBroadcast .list .item.time .label{background:linear-gradient(315deg,rgba(24,192,244,1) 0%,rgba(26,163,246,1) 100%);}
.liveBroadcast .list .item .text{font-size:30rpx;color:#000;margin-top:16rpx; display: flex; justify-content: space-between; padding: 0rpx 10rpx;}
.liveBroadcast .broadcast{width:690rpx;margin:25rpx auto 0 auto;}
.liveBroadcast .broadcast .pictrue{width:100%;height:390rpx;border-radius:10rpx;position:relative;}
.liveBroadcast .broadcast .pictrue image{width:100%;height:100%;border-radius:10rpx;display:block;}
.liveBroadcast .broadcast .pictrue .label{position:absolute;top:0;left:0;height:44rpx;border-radius:10rpx 0 10rpx 0;background:linear-gradient(270deg,rgba(255,85,85,1) 0%,rgba(255,0,0,1) 100%);color:#fff;font-size:24rpx;line-height:44rpx;padding:0 15rpx;}
.liveBroadcast .broadcast .pictrue .label .iconfont{font-size:30rpx;margin-right:12rpx;}
.liveBroadcast .broadcast .text{font-size:30rpx;color:#000;margin:18rpx 0 39rpx 0;}
.liveBroadcast .broadcast.end .label{background:linear-gradient(270deg,rgba(153,153,153,1) 0%,rgba(102,102,102,1) 100%);}
.liveBroadcast .broadcast.time .label{background:linear-gradient(315deg,rgba(24,192,244,1) 0%,rgba(26,163,246,1) 100%);}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
  }