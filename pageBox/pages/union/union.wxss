page {
  height: 100%;

}

/* 2.主盒子 */
.contain {
  padding: 0rpx;
  width: 100%;
  /* 宽度占屏幕的100% */
  height: 89.8vh;
  /* 高度占屏幕的100% */
  background-color: #f5f5f5;
  /* 背景颜色 */
  padding: 0rpx 20rpx;
}

.unionBox {
  width: 100%;
  height: 320rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
  padding: 20rpx;
}

.box_top {
  width: 100%;
  height: 45%;
  display: flex;
  justify-content: space-between;
  align-items: center;

}
.top_text{
  width: 78%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: left;
  padding-left: 10rpx;
}
.top_text text{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  width: 100%;
}
.name{
  font-size: 32rpx;
  margin-bottom: 26rpx;
}
.address{


    font-size: 22rpx;
}
.phone{
  font-size: 22rpx;
}
.top_image {
  width: 146rpx;
  height: 100%;

}
.box_bottom{
  height: 55%;
  width: 100%;
  display: flex;
  justify-content:space-between;
  align-items: center;

}
.bottom_image{
  width: 31%;
  height: 90%;

}
.bottom_images{
  width: 100%;
  height: 100%;
}
/* 隐藏滚动条 */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
  }